        // Masthead
        header.masthead
            .container
                .masthead-subheading Welcome To CP2
                div(style='width:100%')
                    h1.text-uppercase(style='display:inline') Comparer
                    img(src='assets/img/navbar-logo.svg ' alt='...' style="height:3rem; display:inline; margin-top: -1rem; margin-right: 0.5rem; margin-left: 0.5rem;")
                    h1.text-uppercase(style='display:inline') Predictor
                a.btn.btn-primary.btn-xl.text-uppercase(href='#compare', style="margin-top: 1rem") Start Comparing


        div#alert-modal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        h4#alert-modal-title.modal-title.text-start.text-danger
                        button.btn-close.btn-primary(type="button" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div#alert-modal-body.modal-body.text-danger
                    .modal-footer
                    button.btn.btn-primary(type='button' data-dismiss="modal") Close

        // Compare
        section#compare.page-section
            .container
                div#stockName.text-center
                    h2.section-heading.text-uppercase Crypto Currency Price Predictor
                    h3.section-subheading.text-muted Please fill and submit the form to view the comparison
                form#graph-details.row.row-cols-lg-auto.g-3.align-items-center
                    .col-12
                        label.visually-hidden(for="currencies") Crypto Currencies
                        select#currencies.select(multiple name="currencies")
                            option(value="" selected disabled) Crypto Currencies
                            option(value="BTC-USD") BTC-USD
                            option(value="BCH-USD") BCH-USD
                            option(value="XMR-USD") XMR-USD
                            option(value="ZEC-USD") ZEC-USD
                            option(value="XRP-USD") XRP-USD
                            option(value="XLM-USD") XLM-USD
                            option(value="DASH-USD") DASH-USD
                            option(value="BTG-USD") BTG-USD
                            option(value="XRP-USD") XRP-USD
                            option(value="TRX-USD") TRX-USD
                            option(value="ETC-USD") ETC-USD
                            option(value="MIOTA-USD") MIOTA-USD
                            option(value="LTC-USD") LTC-USD
                            option(value="ADA-USD") ADA-USD
                            option(value="XEM-USD") XEM-USD
                    .col-12
                        label.visually-hidden(for="noOfDays") Number of days
                        input#noOfDays.form-control(type="number" name="noOfDays" min="0" max="250" placeholder="days")
                    .col-12(style="width: 15%;")
                        label.visually-hidden(for="type") Action Type
                        select#type.select( name="type")
                            option(value="" selected disabled) Action Type
                            option(value="past_data") Historical Data
                            option(value="predictions") Future Predictions
                    .col-12
                        button.btn.btn-primary(type="submit") Submit
                div#CompareLoadingSpinner.d-flex.align-items-center.visually-hidden
                    strong Fetching data.....
                    div.spinner-border.ms-auto(role='status',aria-hidden="true")
                div#chartForComparison.apex-charts

        // About
        section#workflow.page-section
            .container
                .text-center
                    h2.section-heading.text-uppercase About
                    h3.section-subheading.text-muted A detailed description of application
                ul.timeline
                    li
                        .timeline-image
                            img.rounded-circle.img-fluid(src='assets/img/about/1.jpg', alt='...')
                        .timeline-panel
